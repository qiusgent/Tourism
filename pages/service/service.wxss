/* pages/service/service.wxss */
.service-list{ /*X轴偏移量   Y轴偏移量   阴影模糊半径   阴影扩展半径   阴影颜色   投影方式  */
  box-shadow: 0 8rpx 17rpx 0 rgba(7,17,27, 0.1);
  margin: 10rpx 25rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border: 1rpx solid rgba(250, 241, 225, 0.966);
  border-radius: 18rpx;
}
.service-title{
  font-size: 35rpx;
  font-weight: bold;
  color: #66cfef;
}

.service-list image{
  width: 100%;
  margin-top: 20rpx;
}
.weui-btn_default, .weui-btn_default:not(.weui-btn_disabled):visited {
  color: #fff;
}
.media-box__title1{
  background-color: #f3dedb;
  padding: 4px;
  font-size: 20rpx;
  border-radius: 50rpx;
  color: #f33022;
}
.media-box__title2{
  background-color: #dcecdf;
  padding: 4px;
  font-size: 20rpx;
  border-radius: 50rpx;
  color: #5ab069;
}
.media-box__title3{
  font-size: 23rpx;
}
.list-intro{
  margin-top: 1.5vh;
  color: #a0a0a0;
  font-size: x-small;
}
.weui-media-box {
  padding: 16px 16px 0px 16px;
  position: relative;
}
.service-list image {
  width: 100%;
  margin-top: 0rpx;
}

.service-image {
  margin-left: -3vh;
 margin-top: -1vh;
}
.service-image{
  border-radius: 4px;
}
.weui-media-box_appmsg .weui-media-box__hd {
  margin-right: 9px;
  width: 150px;
  height: 100px;
  line-height: 60px;
  text-align: center;
}

.weui-media-box__title{
  margin-top: 1vh;
  font-size: 27.5rpx;
}
.weui-gallery__img {
  position: absolute;
  width: 100vw;
  height: 100%;
}
.list-tel image{
  width: 2vh;
  height: 2vh;
  padding: 0.5vh 0.5vh 0.83vh 0.83vh;
  background-color: #cde9ff;
  border-radius: 50vh;
  position: absolute;
  right: 0.25vh;
  top: -4vh;
}

