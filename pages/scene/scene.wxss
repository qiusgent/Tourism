/* pages/scene/scene.wxss */
.weui-search-bar{
  background-color: #4f9cec;
  padding: 15rpx 220rpx 21rpx 40rpx; 
}
.weui-search-bar__text{
  position: absolute;
}
.weui-search-bar__form{
  border-radius: 50rpx;
}
.weui-search-bar__label{
  position: relative;
  height: 64rpx ;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #f3f3f3;
  border-radius: 50rpx;
}
.weui-btn{
  background-color: #cce6ff;
  color: #75c4e5;
  border-radius: 50rpx;
  width: 10vh;
  height: 64rpx ;
  position: absolute;
  margin-top: -6.5vh;
  margin-left: 45vh;
  align-items: center;
  justify-content: center;
  display: flex;
  padding: 0 0;
}

swiper{
  height:92.5vh;
}
.bg-group{
  position: relative;
  height:92.5vh;
  overflow: hidden;
}
.poster-bg,.bg-group::after{
  position: absolute;
  width: 100vw;
  height: 100vh;
  top: 0;
  left: 0;
}
.bg-group::after{
  content: '';
  background-color: rgba(0,0,0, 0.1);
}
.poster-bg{
  filter: blur(20rpx);
  background-size: cover;
  background-position: center;
}
.image-wrap{
  width: 100vw;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  margin-top:6.5vh;
}
.img{
  width: 70vw;
  height: 70vh;
  border-radius: 10rpx;
}
.weui-btn_default{
  position: absolute;
  z-index: 1;
  width:70vw;
  height: 5vh;
  border-radius: 50rpx;
  margin-top: 80vh;
  background-color: #4f9cec;
  color: #f3f3f3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page__bd_spacing{
  display: flex;
  justify-content: center;
}
.a{
  z-index: 1;
  font-size: smaller;
  position: absolute;
  width:20vw;
  height: 3vh;
  margin-top: 6.5vh;
  margin-left: 65vw;
  border-radius: 15rpx;
  background-color: #cce6ff;
  color: #79bfe0;
  display: flex;
  justify-content: center;
  align-items: center;
}