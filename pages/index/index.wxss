.weui-search-bar__text{
  position: absolute;
}
.weui-search-bar__label{
  position: relative;
  height: 75rpx ;
  flex: 1;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  background: #f3f3f3;
}
.picker{
  color: #fff;
  position: absolute;
  margin-top: -6.45vh;
  margin-left: 1.7vh;
}
.picker image{
  margin-bottom: 0.2vh;
  margin-left: 0.95vh;
}
.a{
  z-index: 101;
  position: relative;
  color:#9b9b9b;
  text-align: left;
  margin-left: 13.5vh;
  height: 55rpx;
