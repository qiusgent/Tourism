 }
swiper {
  display: block;
  height: 175px;
}
.swiper-wrap{
  padding: 0 2.5vw;
  margin-top: -3.3vh;
}
.image__swiper {
  width: 100vw;
  border-radius: 18rpx;
}
.wx-swiper-dot.wx-swiper-dot-active {
  width: 30rpx;
  border-radius: 15rpx;
}
.content-info-list{
  font-family: Microsoft YaHei;
  padding: 1vh 0;
}
.list-title{
  margin: 20rpx 35rpx;
}
.list-inner{
  display: flex;
  flex-wrap: wrap; /*可换行*/
  margin: 0 20rpx;
}
.list-item{
  padding: 1.1vh 0   ;
  flex: 1;
  color:#000 ;
}
.list-item > image{
  display: block;
  width: 75rpx;
  height: 75rpx;
  margin: 0 auto;
}
.list-item > view{
  width: 200rpx;
  margin: 10rpx auto;
  font-size: 11pt;
  font-family: KaiTi;
  text-align: center;
}
.list-item :hover {
  color: red;
} 

.tabList-all{
  padding: 0 2.5vw;
}
.tabList-title{
  padding: 0 0 20rpx 0;
}
.tabList-title text{
  font-size:larger;
  font-weight:900;
  margin: 0 1vh 0 1.8vh;
}
.tabList-title{
  color: #4f9cec;
}
.tabList {
  font-size: smaller;
  user-select: none;
  width: 100vw;
  display: flex;
  flex-wrap: nowrap;  /* //元素都放在一行,也是默认属性值; */
  align-items: center;
  padding: 0 0 12rpx 0;
  border-bottom:5rpx solid #f3f3f3 ;
}
.image-tabList{
  margin: 8rpx 22rpx;
  width: 28vh;
  height: 15vh;
  border-radius: 18rpx;
}
.text-tabList{
  text-align: center;
}
