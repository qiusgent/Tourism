/* pages/service/service.wxss */
.service-list{ /*X轴偏移量   Y轴偏移量   阴影模糊半径   阴影扩展半径   阴影颜色   投影方式  */
  box-shadow: 0 8rpx 17rpx 0 rgba(7,17,27, 0.1);
  margin: 10rpx 25rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
  background: #fff;
  border: 1rpx solid rgba(250, 241, 225, 0.966);
  border-radius: 18rpx;
}
.service-title{
  font-size: 35rpx;
  font-weight: bold;
  color: #66cfef;
}
.weui-btn_default, .weui-btn_default:not(.weui-btn_disabled):visited {
  color: #fff;
}
.media-box__title1{
  background-color: #f3dedb;
  padding: 4px;
  font-size: 20rpx;
  border-radius: 50rpx;
  color: #f33022;
}
.media-box__title2{
  background-color: #dcecdf;
  padding: 4px;
  font-size: 20rpx;
  border-radius: 50rpx;
  color: #5ab069;
}
.media-box__title3{
  font-size: 23rpx;
}
.list-intro{
  margin-top: 1.5vh;
  color: #a0a0a0;
  font-size: x-small;
}
.weui-media-box {
  padding: 16px 16px 0px 16px;
  position: relative;
}
.service-image{
  border-radius: 4px;
  margin-left: -1.5vh;
}
.weui-media-box_appmsg .weui-media-box__hd {
  width: 200vw;
  height: 21vh;
}
.weui-media-box__title{
  margin-top: 1vh;
  font-size: 27.5rpx;
}
.weui-gallery__img {
  position: absolute;
  width: 100vw;
  height: 100%;
}
.list-tel {
  width: 10vh;
  height: 3vh;
  background-color: #6db6ee;
  border-radius: 15vh;
  position: absolute;
  right: 0.25vh;
  top: -3.5vh;
}
.list-tel text{
  width: 10vh;
  height: 3vh;
  display: flex;
  font-size: 23rpx;
  color: #fff;
  justify-content: center;
  align-items: center;
}
